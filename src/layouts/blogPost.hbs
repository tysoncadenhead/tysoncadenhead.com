{{> _header}}
    <section class="blogpost-header">
        <a href="{{path}}" title="{{{title}}}">
            <div class="thumbnail" style="background-image: url({{{thumbnail}}})"></div>
        </a>
        <div class="blogpost-text">
            <h1 class="title">
                <a href="{{path}}" title="{{{title}}}">{{{title}}}</a>
            </h1>
            <div class="date">{{{date}}}</div>
        </div>
    </section>
    {{{post}}}
    {{> _subscribe}}
    {{> _comments}}
{{> _footer}}